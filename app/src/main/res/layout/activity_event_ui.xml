<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#101010"
    android:orientation="vertical"
    tools:context="seniorproject.game.DecisionActivity"
    android:weightSum="1">

    <!-- Relay Box -->

    <TextView
        android:id="@+id/relay_box"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#ff0000"
        android:text="@string/relay_text"/>

    <!-- Enemy Health -->
    <TextView
        android:id="@+id/enemyhp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="BOSS HP: 100/100"
        android:gravity="right"
        android:textSize="17sp"
        android:textColor="#00ff00"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="245dp"
        android:id="@+id/mainImage" />

    <!-- Player Health -->
    <TextView
        android:id="@+id/playerhp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HP: 100/100"
        android:gravity="left"
        android:textSize="17sp"
        android:textColor="#00ff00"/>

    <!-- Action Box -->
    <TableLayout
        android:id="@+id/action_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:layout_gravity="center">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-12dp"
            android:padding="5dip" >

            <Button
                android:id="@+id/button1"
                android:textSize="14dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:text="@string/button1" />

            <Button
                android:id="@+id/button2"
                android:textSize="14dp"
                android:text="@string/button2" />

        </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip" >

            <Button
                android:id="@+id/button3"
                android:textSize="14dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:text="@string/button3" />

            <Button
                android:id="@+id/button4"
                android:textSize="14dp"
                android:text="@string/button4" />

        </TableRow>

    </TableLayout>

</LinearLayout>


